<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/img_item_meal"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            tools:src="@color/orange"/>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/meal_name"
            android:layout_toEndOf="@+id/img_item_meal"
            android:layout_toRightOf="@id/img_item_meal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_item_desc_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/desc_short"
            android:layout_toEndOf="@id/img_item_meal"
            android:layout_toRightOf="@id/img_item_meal"
            android:layout_below="@id/tv_item_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>